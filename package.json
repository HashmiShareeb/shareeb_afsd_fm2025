  "scripts": {
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "lint-staged": {
    "packages/pwa/**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "npm run -w pwa linter",
      "npm run -w pwa format"
    ],
    "packages/pwa/**/*.md": [
      "npm run -w pwa format"
    ],
    "packages/api/**/*.ts": [
      "npm run -w api lint",
      "npm run -w api format"
    ]
  },
  "keywords": [],
